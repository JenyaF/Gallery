@model Galery.Models.Wrapper

@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>
<h3>Filling the form below</h3>
<div>
    <form action="/Home/AddUser" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="inputEmail4" class="col-sm-3 control-label">Email</label>
            <div class="col-sm-9">
                <input type="email" required name="Login" class="form-control" id="inputEmail4" placeholder="Email">
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword4" class="col-sm-3 control-label">Password</label>
            <div class="col-sm-9">
                <input type="password" required name="Password" class="form-control" id="inputPassword4" placeholder="Password">
            </div>
        </div>

        <div class="form-group">
            <label for="input3" class="col-sm-3 control-label">Name</label>
            <div class="col-sm-9">
                <input type="text" required name="Name" class="form-control" id="input3" placeholder="Jek">
            </div>
        </div>

        <div class="form-group">
            <label for="input4" class="col-sm-3 control-label">Surname</label>
            <div class="col-sm-9">
                <input type="text"  required name="Surname" class="form-control" id="input4" placeholder="Don">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-9">
                <button type="submit"  class="btn btn-success btn-lg">Enter</button>
            </div>
        </div>
    </form>
</div>