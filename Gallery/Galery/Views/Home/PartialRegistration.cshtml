
@if (Session["Name"] != null)
{
<div>
    Welcome, @Session["Name"]!
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <form action="/Home/ExitAsUser" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <div class=" col-sm-6">
                        <button type="submit" class="btn btn-danger">Exit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6 col-sm-6 col-lg-6">
            <form action="/Home/FormForPicture" method="get" class="form-horizontal" role="form">
                <div class="form-group">
                    <div class=" col-sm-6">
                        <button type="submit" class="btn btn-default">Add Picture</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div>
        <form action=@Html.Raw("/Home/Index/"+Session["Id"]) method="get"  class="form-horizontal" role="form">
            <div class="form-group">
                <div class="col-sm-offset-6 col-sm-6">
                    <button type="submit" class="btn btn-default">My pictures</button>
                </div>
            </div>
        </form>
    </div>
</div>
}
