@model Galery.Models.Wrapper


@{
    ViewBag.Title = "FormForPicture";
}

<h2>Add picture</h2>
<h3>Filling the form below</h3>
<div>
    <form action="/Home/AddPicture" method="post" enctype="multipart/form-data" class="form-horizontal" role="form">

        <div class="form-group">
            <label for="inputTitle" class="col-sm-3 control-label">Title</label>
            <div class="col-sm-9">
                <input type="text" required name="Title" class="form-control" id="inputTitle" placeholder="Winter night">
            </div>
        </div>

        <div class="form-group">
            <label for="inputDir" class="col-sm-3 control-label">Direction</label>
            <div class="col-sm-9">
                <input type="text" required name="Direction" class="form-control" id="inputDir" placeholder="Landscape">
            </div>
        </div>

        <div class="form-group">
            <label for="inputPrice" class="col-sm-3 control-label">Price</label>
            <div class="col-sm-9">
                <input type="number" required step="100" min="0" max="100000" value="1000" name="Price" class="form-control" id="inputPrice">
            </div>
        </div>
        <div class="form-group">
            <label for="inputImg" class="col-sm-3 control-label">Image</label>
            <div class="col-sm-9 ">
                <div id="btnForFile">
                    <label for="inputImg" class=" btn btn-info">Choose</label>
                </div>
                <input type="file" name="Image" required accept="image/*" id="inputImg" style="visibility:hidden;">

            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10">
                <button type="submit" class="btn btn-success btn-lg">Enter</button>
            </div>
        </div>
    </form>
</div>